
@model MathProject.Models.Question
@using MathProject.Models;
@{
    ViewData["Title"] = "Category";
}
<body>
    <h2>Zadanie numer @Html.DisplayFor(model => model.ID)</h2>
    <div>
         @Html.DisplayFor(model => model.Content)
    </div>
    <div>
        <h4> Podaj Twoją odpowiedź</h4>
        <input asp-for="CorrectAnswer" id="answer" class="form-control" placeholder="Podaj odpowiedź"/>
        <button type="submit" class="btn btn-default" asp-action ="Solve" asp-route-id ="@Model.ID">Pokaż czy dobrze odpowiedziałem</button>
        <a asp-action="Solve" asp-route-id ="@Model.ID" asp-route-question="Model"> kfhs</a>
       
    </div>
</body>
