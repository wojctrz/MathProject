@model IEnumerable<Math_Project.Models.ApplicationUser>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            @if (item.Roles.Count == 0)
            {
                <td>
                   ni ma roli
                </td>

            }
            @foreach (var role in item.Roles)
            {
                <td>
                    @Html.DisplayFor(modelItem => role)
                </td>
            }
            <td>
                <a asp-action="GrantTeacher" asp-route-id="@item.Id">Uczyń nauczycielem</a> |
                <a asp-action="GrantAdmin" asp-route-id="@item.Id">Uczyń adminem</a> |
            </td>
        </tr>
}
    </tbody>
</table>
